FROM php:8.2-cli

# Install required packages
RUN apt-get update && apt-get install -y \
    libpq-dev \
    netcat-openbsd \
    && docker-php-ext-install pdo pdo_pgsql

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

WORKDIR /app
COPY . .
RUN chmod +x simple-start.sh

EXPOSE 8000
CMD ["./simple-start.sh"]